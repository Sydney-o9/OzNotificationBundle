<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="merk\NotificationBundle\Model\NotificationEventKey">
        <property name="notificationKey">
            <constraint name="NotBlank">
                <option name="message">merk_notification.notificationKey.blank</option>
            </constraint>
            <constraint name="Length">
                <option name="min">5</option>
                <option name="minMessage">merk_notification.notificationKey.short</option>
                <option name="max">100</option>
            </constraint>
        </property>

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">notificationKey</option>
            <option name="message">merk_notification.notificationKey.already_used</option>
        </constraint>

    </class>

</constraint-mapping>

