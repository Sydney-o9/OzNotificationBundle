<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="merk_notification.entity_manager" factory-service="doctrine" factory-method="getEntityManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>%merk_notification.model_manager_name%</argument>
        </service>

        <service id="merk_notification.notification_event_key.manager.default" class="merk\NotificationBundle\EntityManager\NotificationEventKeyManager">
            <argument type="service" id="merk_notification.entity_manager" />
            <argument>%merk_notification.notification_event_key.class%</argument>
        </service>

        <service id="merk_notification.notification_event.manager.default" class="merk\NotificationBundle\EntityManager\NotificationEventManager">
            <argument type="service" id="merk_notification.entity_manager" />
            <argument>%merk_notification.notification_event.class%</argument>
            <argument type="service" id="merk_notification.notification_event_key.manager" />
        </service>

        <service id="merk_notification.notification.manager.default" class="merk\NotificationBundle\EntityManager\NotificationManager">
            <argument type="service" id="merk_notification.entity_manager" />
            <argument>%merk_notification.notification.class%</argument>
            <argument type="service" id="merk_notification.renderer" />
        </service>

        <service id="merk_notification.user_preferences.manager.default" class="merk\NotificationBundle\EntityManager\UserPreferencesManager">
            <argument type="service" id="merk_notification.entity_manager" />
            <argument>%merk_notification.user_preferences.class%</argument>
            <argument type="service" id="merk_notification.filter.manager" />
        </service>

        <service id="merk_notification.filter.manager.default" class="merk\NotificationBundle\EntityManager\FilterManager">
            <argument type="service" id="merk_notification.entity_manager" />
            <argument>%merk_notification.filter.class%</argument>
            <argument type="service" id="merk_notification.notification_event_key.manager" />
            <argument>%merk_filter_parameters%</argument>
        </service>

        <service id="merk_notification.notification_event.listener" class="merk\NotificationBundle\EventListener\NotificationEventListener" public="false">
            <tag name="doctrine.event_subscriber" />
            <argument type="service" id="service_container" />
        </service>


        <service id="merk_notification.unique_filter.validator" class="merk\NotificationBundle\Validator\Constraints\UniqueFilterValidator">
            <argument type="service" id="security.context" />
            <argument type="service" id="merk_notification.filter.manager" />
            <tag name="validator.constraint_validator" alias="merk_notification.filter.validator" />
        </service>

    </services>

</container>