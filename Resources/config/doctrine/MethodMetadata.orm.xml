<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Oz\NotificationBundle\Entity\MethodMetadata">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="isDefault" column="is_default" type="boolean" nullable="false" />

        <field name="isCompulsory" column="is_compulsory" type="boolean" nullable="false" />

    </mapped-superclass>

</doctrine-mapping>
