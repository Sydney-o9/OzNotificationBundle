<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="merk_notification_user_preferences" pattern="/">
        <default key="_controller">merkNotificationBundle:UserPreferences:edit</default>
        <requirement key="_method">GET|POST</requirement>
    </route>

    <route id="merk_notification_user_preferences_test" pattern="/test">
        <default key="_controller">merkNotificationBundle:UserPreferences:test</default>
        <requirement key="_method">GET</requirement>
    </route>

</routes>