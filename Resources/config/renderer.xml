<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="merk_notification.renderer.default" class="merk\NotificationBundle\Renderer\Renderer">
            <tag name="merk_notification.notification.renderer" alias="default" />
            <argument type="service" id="twig" />
            <argument>merkNotificationBundle:Notifications:%%s.%%s.%%s.twig</argument>
        </service>

        <service id="merk_notification.renderer.email" class="merk\NotificationBundle\Renderer\EmailRenderer">
            <tag name="merk_notification.notification.renderer" alias="email" />
            <argument type="service" id="twig" />
            <argument>merkNotificationBundle:Notifications:%%s.%%s.%%s.twig</argument>
        </service>

        <service id="merk_notification.renderer.sms" class="merk\NotificationBundle\Renderer\SMSRenderer">
            <tag name="merk_notification.notification.renderer" alias="sms" />
            <argument type="service" id="twig" />
            <argument>merkNotificationBundle:Notifications:%%s.%%s.%%s.twig</argument>
        </service>

    </services>

</container>