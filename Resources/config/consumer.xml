<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="merk_notification.consumer.email" class="merk\NotificationBundle\Consumer\EmailConsumer">
            <argument type="service" id="mailer" />
            <argument type="service" id="notification_email_logger" />
        </service>

        <service id="merk_notification.consumer.sms" class="merk\NotificationBundle\Consumer\SMSConsumer">
            <argument type="service" id="notification_sms_logger" />
        </service>


        <service id="email_notification_consumer" alias="merk_notification.consumer.email" />

        <service id="sms_notification_consumer" alias="merk_notification.consumer.sms" />

    </services>

</container>