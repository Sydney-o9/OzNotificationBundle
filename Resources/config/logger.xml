<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Loggers -->
        <service id="oz_notification.logger.email" class="Symfony\Bridge\Monolog\Logger">
            <argument>notification_email</argument>
            <call method="pushHandler">
                <argument type="service" id="notification_email_handler" />
            </call>
        </service>

        <service id="oz_notification.logger.sms" class="Symfony\Bridge\Monolog\Logger">
            <argument>notification_sms</argument>
            <call method="pushHandler">
                <argument type="service" id="notification_sms_handler" />
            </call>
        </service>

        <service id="oz_notification.logger.ios_push" class="Symfony\Bridge\Monolog\Logger">
            <argument>notification_ios_push</argument>
            <call method="pushHandler">
                <argument type="service" id="notification_ios_push_handler" />
            </call>
        </service>

        <service id="notification_email_logger" alias="oz_notification.logger.email" />
        <service id="notification_sms_logger" alias="oz_notification.logger.sms" />
        <service id="notification_ios_push_logger" alias="oz_notification.logger.ios_push" />

        <!-- Handlers -->
        <service id="oz_notification.handler.email" class="Monolog\Handler\StreamHandler">
            <argument>%kernel.root_dir%/logs/%kernel.environment%.notification.email.log</argument>
            <argument>200</argument>
        </service>

        <service id="oz_notification.handler.sms" class="Monolog\Handler\StreamHandler">
            <argument>%kernel.root_dir%/logs/%kernel.environment%.notification.sms.log</argument>
            <argument>200</argument>
        </service>

        <service id="oz_notification.handler.ios_push" class="Monolog\Handler\StreamHandler">
            <argument>%kernel.root_dir%/logs/%kernel.environment%.notification.ios_push.log</argument>
            <argument>200</argument>
        </service>

        <service id="notification_email_handler" alias="oz_notification.handler.email" />
        <service id="notification_sms_handler" alias="oz_notification.handler.sms" />
        <service id="notification_ios_push_handler" alias="oz_notification.handler.ios_push" />


    </services>

</container>

